# compile options
NAME		= philo
HEADER 		= philo.h
CC          = cc
CFLAGS      = -Wall -Wextra -Werror -g -fsanitize=thread
RM			= rm -rf

# source files
SRCS 		= parsing.c		\
			  init.c		\
	   		  philo_utils.c	\
	   		  routine.c		\
	   		  print.c		\
			  main.c

OBJS		= $(SRCS:.c=.o)

RESET		= \033[0m
GREEN 		= \033[1;32m
YELLOW		= \033[1;33m

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $^ -lpthread -o $@
	@echo "$(GREEN)â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—$(RESET)"
	@echo "$(GREEN)â•‘           philo make success.          â•‘$(RESET)"
	@echo "$(GREEN)â• â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•£$(RESET)"
	@echo "$(GREEN)â•‘                      ðŸ ðŸ´ ðŸ’¤ ðŸ›Œ ðŸ“˜ ðŸ–Œ  â•‘$(RESET)"
	@echo "$(GREEN)â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•$(RESET)"

all: $(NAME)

clean:
	@$(RM) $(OBJS)
	@echo "$(YELLOW)â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—$(RESET)"
	@echo "$(YELLOW)â•‘           ðŸ—‘ clean finish. ðŸ—‘            â•‘$(RESET)"
	@echo "$(YELLOW)â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•$(RESET)"

fclean: clean
	@$(RM) $(NAME)
	@echo "$(YELLOW)â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—$(RESET)"
	@echo "$(YELLOW)â•‘           ðŸ“¦ fclean finish. ðŸ“¦         â•‘$(RESET)"
	@echo "$(YELLOW)â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•$(RESET)"

re:
	@make fclean
	@make all

.PHONY: all clean fclean re

